          <Column id="math" type="INT" size="256"/>
        </ColumnInfo>
        <Rows>
          <Row>
            <Col id="name">홍길동</Col>
            <Col id="kor">90</Col>
            <Col id="eng">80</Col>
            <Col id="math">70</Col>
            <Col id="gender">M</Col>
          </Row>
          <Row>
            <Col id="math">30</Col>
            <Col id="eng">40</Col>
