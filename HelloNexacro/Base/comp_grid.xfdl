            <Col id="math">80</Col>
          </Row>
        </Rows>
      </Dataset>
    </Objects>
    <Bind>
      <BindItem id="item0" compid="Div00.form.Edit00" propid="value" datasetid="ds_student" columnid="name"/>
      <BindItem id="item1" compid="Div00.form.Radio00" propid="value" datasetid="ds_student" columnid="gender"/>
      <BindItem id="item2" compid="Div00.form.Edit01" propid="value" datasetid="ds_student" columnid="kor"/>
      <BindItem id="item3" compid="Div00.form.Edit02" propid="value" datasetid="ds_student" columnid="eng"/>
      <BindItem id="item4" compid="Div00.form.Edit03" propid="value" datasetid="ds_student" columnid="math"/>
    </Bind>
  </Form>
</FDL>
